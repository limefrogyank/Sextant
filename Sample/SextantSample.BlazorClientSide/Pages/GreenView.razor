@page "/green"
@inherits ReactiveComponentBase<GreenViewModel>

<h1>Green</h1>
<button class="btn-primary" @onclick="() => ViewModel?.OpenModal.Execute().Subscribe()">Open Modal</button>

@code{
    protected override Task OnInitializedAsync()
    {
        SextantSample.ViewModel.Interactions
                .ErrorMessage
                .RegisterHandler(async x =>
                {
                    System.Diagnostics.Debug.WriteLine(x.Input.Message);
                    x.SetOutput(true);
                });
        return Task.CompletedTask;
    }
}
